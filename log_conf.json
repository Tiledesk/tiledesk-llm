{
  "loggers": {
    "myapp": {
      "level": "DEBUG",
      "propagate": false,
      "handlers": [
        "stdout",
        "stderr"
      ]
    }
  },
  "version": 1,
  "disable_existing_loggers": false,
  "handlers": {
    "stdout": {
      "formatter": "simple",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stdout",
      "level": "DEBUG"
    },
    "stderr": {
      "level": "ERROR",
      "formatter": "simple",
      "class": "logging.StreamHandler",
      "stream": "ext://sys.stderr"
    }
  },
  "root": {
    "level": "INFO",
    "handlers": [
      "stdout","stderr"
    ]
  },
  "formatters": {
    "simple": {
      "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
    }
  }
}